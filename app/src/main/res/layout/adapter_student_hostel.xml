<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/adapter_student_homework_viewContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/headLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2"
                    android:background="#E7F1EE">
                    <TextView
                        android:id="@+id/adapter_hostelnameTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="English"
                        android:textSize="@dimen/primaryText"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textHeading"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                       >
                        <TextView
                            android:id="@+id/Adapter_statusTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_border"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/assigned"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/adapter_student_homework_dateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/hostelRoomType"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"
                            />

                        <TextView
                            android:id="@+id/adapter_roomtypeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 Dec, 2021"
                            android:textSize="@dimen/secondaryText"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:paddingBottom="5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/hostelRoomNo"
                            android:textSize="@dimen/secondaryText"
                            android:textColor="@color/textHeading"
                            />

                        <TextView
                            android:id="@+id/adapter_roomnoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 Dec, 2021"
                            android:textSize="@dimen/secondaryText"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/noofbed"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"
                            />

                        <TextView
                            android:id="@+id/adapter_noofbedTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abhishek Singh"
                            android:textSize="@dimen/secondaryText"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:paddingBottom="5dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/adapter_student_homework_evaluatedByHeadTV"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/costperbed"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"
                            />

                        <TextView
                            android:id="@+id/adapter_costperbedTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abhishek Singh"
                            android:textSize="@dimen/secondaryText"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>

