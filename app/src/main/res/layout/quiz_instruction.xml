<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/addTask_dialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textHeading">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:minHeight="35dp"
                android:padding="5dp"
                android:text="Quiz Instructions"
                android:textColor="@color/white"
                android:textSize="@dimen/primaryText"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/adapter_student_teacher"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/onlinePayment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingEnd="10sp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiztitle"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/primaryText"
                        android:textColor="@color/textHeading"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiztitle"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading"/>

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/offlinePayment"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/primaryText"
                            android:text="@string/noofquestion"
                            android:textColor="@color/textHeading"/>
                        <TextView
                            android:id="@+id/question_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/primaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/primaryText"
                        android:text="Instructions"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/primaryText"
                            android:text="1.Read each question carefully, and click on the button next to your response that is based on the information covered on the topic in the module.
\n2.Each question in the quiz is of multiple-choice or true or false format.
\n3.If you select an incorrect response for a question, you can try again until you get the correct response.
\n4.All information covered on the topic in the module."
                            android:textColor="@color/textHeading"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/startBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/primaryText"
                            android:text="Start Quiz"
                            android:paddingStart="10dp"
                            android:background="@drawable/green_curve_border"
                            android:paddingEnd="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>