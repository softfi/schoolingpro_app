<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/image_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.qdocs.smartschool.utils.CustomImageView
                android:id="@+id/courseDetail_imageBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/coursedetail_playbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/play_button"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/youtube_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/courseDetails_courseNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/primaryTextColour"
            android:textSize="@dimen/heading"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseDetailsdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="@dimen/primaryText"
            android:textColor="@color/primaryTextColour" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:cardElevation="3dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/teacher_ImageIV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_user" />

                <TextView
                    android:id="@+id/teacherNameTV"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@string/hhh_hhhh_hhhhh_hhh_sds_sfsa_c_fdssvsddsfsdd_ddss_dc_dcdxc_hhhh_hbb_hhhh_hhhhh_hhhh_hhh_hhhbh_hh_hhhhhh_hhbfbbb"
                    android:textStyle="bold"
                    android:textSize="@dimen/primaryText"
                    android:textColor="@color/textHeading"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/last_updated"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText" />
                <TextView
                    android:id="@+id/updateDateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_2021_05_18_06_09_36"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText" />

            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_subject"
                        android:scaleType="centerCrop"
                        android:padding="2dp" />

                    <TextView
                        android:id="@+id/courseDetail_class"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/primaryTextColour"
                        android:textSize="@dimen/secondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lesson_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_play_icon"
                        android:scaleType="centerCrop"
                        android:padding="2dp" />

                    <TextView
                        android:id="@+id/courseDetail_lesson"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/primaryTextColour"
                        android:textSize="@dimen/secondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quiz_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_quiz"
                        android:scaleType="centerCrop"
                        android:padding="2dp" />

                    <TextView
                        android:id="@+id/courseDetail_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/primaryTextColour"
                        android:textSize="@dimen/secondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hour_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        android:scaleType="centerCrop"
                        android:padding="2dp" />

                    <TextView
                        android:id="@+id/courseDetail_hours"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/primaryTextColour"
                        android:textSize="@dimen/secondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:weightSum="2">

                        <TextView
                            android:id="@+id/courseDetail_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Free"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/primaryText" />

                        <TextView
                            android:id="@+id/courseDetail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Free"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/primaryText" />

                </LinearLayout>
                  <LinearLayout
                      android:id="@+id/rating_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="15dp"
                      android:weightSum="2"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1.3">

                          <RatingBar
                              android:id="@+id/rating"
                              style="@style/customRatingBar"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:progressBackgroundTint="@color/hintDark"
                              android:progressTint="@color/yellow"
                              android:visibility="visible" />
                          <TextView
                              android:id="@+id/totalrating"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/textHeading"/>

                      </LinearLayout>

                      <LinearLayout
                          android:id="@+id/rate"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:gravity="end"
                          android:visibility="visible"
                          android:layout_marginRight="10dp"
                          android:layout_weight="0.7">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/hyperLink"
                              android:textStyle="bold"
                              android:text="@string/ratethis"/>

                  </LinearLayout>

                  </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/buy_now_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buynow"
                        android:gravity="center"
                        android:background="@drawable/button_style_accent"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/primaryText"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true" />

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/courseLearnheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/courseLearn"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColour" />
                <TextView
                    android:id="@+id/courseDetails_courseLearnTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    android:textColor="@color/primaryTextColour"
                    android:divider="@color/transparent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/curriculum_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/courseIncludes"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColour" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/courseDetails_courseCurriculumTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/review_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            android:visibility="gone"
            app:cardUseCompatPadding="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/review"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColour" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/courseDetails_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
    </LinearLayout>

    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>
