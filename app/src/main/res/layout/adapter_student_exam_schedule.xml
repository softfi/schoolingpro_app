<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/adapter_student_libraryBook_nameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/adapter_student_examSchedule_subjectTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:textSize="@dimen/primaryText"
                android:gravity="start|center"
                android:textColor="@color/textHeading"
                android:textStyle="bold"
                android:padding="5dp" />



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/adapter_student_libraryBook_detailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/adapter_student_libraryBook_nameView"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/adapter_student_homework_dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hostelRoomNo"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_roomTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/starttime"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_timeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/max"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/min"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/CreditHours"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/secondaryText"
                    />

                <TextView
                    android:id="@+id/adapter_student_examSchedule_CreditHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/secondaryText"
                    />

            </LinearLayout>
        </LinearLayout>
            <!--AUTHOR NAME AND SUBJECT NAME VIEW ENDS-->
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

