<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_report_card_exam_list"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/data_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/examresultheading"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="22dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/topimage"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:src="@drawable/examinationpage"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_inner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            app:cardElevation="5dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/lightGrey">

                                    <TextView
                                        android:id="@+id/studentReportCard_examResultNameTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textHeading"
                                        android:textSize="@dimen/primaryText"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/consolidate_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@color/roboto_calendar_circle_4"
                                        android:fontFamily="sans-serif-smallcaps"
                                        android:gravity="center_vertical"
                                        android:inputType="textCapWords"
                                        android:padding="5dp"
                                        android:text="@string/consolidate"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/gpa_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="5"
                                    android:padding="5dp"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.5"
                                        android:fontFamily="sans-serif-smallcaps"
                                        android:gravity="center|left"
                                        android:text="@string/subject"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/textHeading"
                                        android:textSize="@dimen/secondaryText"
                                        android:textStyle="bold"
                                        android:typeface="sans" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:layout_weight="0.7"
                                        android:fontFamily="sans-serif-smallcaps"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:typeface="sans"
                                        android:gravity="center"
                                        android:textSize="@dimen/secondaryText"
                                        android:textColor="@color/textHeading"
                                        android:textStyle="bold"
                                        android:text="@string/gradepoint"/>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:typeface="sans"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:gravity="center"
                                        android:fontFamily="sans-serif-smallcaps"
                                        android:layout_weight="1"
                                        android:text="@string/CreditHours"
                                        android:textSize="@dimen/secondaryText"
                                        android:textColor="@color/textHeading"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:fontFamily="sans-serif-smallcaps"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:typeface="sans"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="@string/QualityPoints"
                                        android:textSize="@dimen/secondaryText"
                                        android:textColor="@color/textHeading"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-smallcaps"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:typeface="sans"
                                        android:gravity="end"
                                        android:padding="5dp"
                                        android:text="@string/note"
                                        android:textSize="@dimen/secondaryText"
                                        android:textColor="@color/textHeading"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/average_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:minHeight="40dp"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.7"
                                        android:paddingBottom="5dp"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView

                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:textStyle="bold"
                                            android:gravity="left"
                                            android:layout_weight="1.2"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading"
                                            android:text="@string/subject" />

                                        <TextView

                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:visibility="visible"
                                            android:layout_weight="0.7"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading"
                                            android:text="@string/max"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.3"
                                        android:paddingBottom="5dp"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <TextView

                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:text="@string/MarksObtained"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading" />



                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:padding="5dp"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:text="@string/note"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading" />

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/basic_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:minHeight="40dp"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.7"
                                        android:paddingBottom="5dp"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:id="@+id/adapter_reportCard_examResult_subjectNameTV"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:textStyle="bold"
                                            android:gravity="left"
                                            android:layout_weight="1.2"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading"
                                            android:text="@string/subject" />

                                        <TextView
                                            android:id="@+id/adapter_reportCard_examResult_passingmarksTV"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:visibility="visible"
                                            android:layout_weight="0.7"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading"
                                            android:text="@string/min"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.3"
                                        android:paddingBottom="5dp"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <TextView
                                            android:id="@+id/adapter_reportCard_examResult_marksObtainedTV"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:text="@string/MarksObtained"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading" />

                                        <TextView
                                            android:id="@+id/reportCard_examResult"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:textStyle="bold"
                                            android:text="@string/result"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:padding="5dp"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:text="@string/note"
                                            android:textSize="@dimen/secondaryText"
                                            android:textColor="@color/textHeading" />

                                    </LinearLayout>

                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/studentReportCard_examResultListview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </androidx.recyclerview.widget.RecyclerView>

                                <LinearLayout
                                    android:id="@+id/gpa_bottom_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/grey"
                                    android:weightSum="2"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:weightSum="2"
                                        android:orientation="horizontal"
                                        android:gravity="start"
                                        android:paddingStart="10dp">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/CreditHours"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                            <TextView
                                                android:id="@+id/studentReportCard_credit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="start"
                                            >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/rank"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                            <TextView
                                                android:id="@+id/rankgpa"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:textSize="12sp"
                                                android:textAllCaps="true"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="left">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="5dp"
                                            android:text="@string/QualityPoints"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:paddingStart="10sp"
                                            android:textColor="@color/textHeading"
                                            android:gravity="center_vertical"/>

                                        <TextView
                                            android:id="@+id/studentReportCard_qualitypoints"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="5dp"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/textHeading"
                                            android:gravity="center_vertical"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/basic_bottom_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@color/grey"
                                    android:layout_marginTop="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:weightSum="2"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="start"
                                            android:paddingStart="10dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/grandTotal"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                            <TextView
                                                android:id="@+id/studentReportCard_examResulTotalTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="left">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/percentage"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                            <TextView
                                                android:id="@+id/studentReportCard_percentageTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="2"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="start"
                                            android:paddingStart="10dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/division"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                            <TextView
                                                android:id="@+id/studentReportCard_division"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:textSize="12sp"
                                                android:textAllCaps="true"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="left">

                                            <TextView
                                                android:id="@+id/studentReportCard_gradeHeaderTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/result"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:padding="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/studentReportCard_statusTV"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:text="-"
                                                    android:background="@drawable/green_border"
                                                    android:textAllCaps="true"
                                                    android:paddingStart="5dp"
                                                    android:paddingEnd="5dp"
                                                    android:textSize="@dimen/secondaryText"
                                                    android:textColor="@color/white" />


                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="2"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="start"
                                            android:paddingStart="10dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:text="@string/rank"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                            <TextView
                                                android:id="@+id/rank"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_margin="5dp"
                                                android:textSize="12sp"
                                                android:textAllCaps="true"
                                                android:textStyle="bold"
                                                android:textColor="@color/textHeading"
                                                android:gravity="center_vertical"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>



