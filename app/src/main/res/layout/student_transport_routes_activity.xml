<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qdocs.smartschool.students.StudentTransportRoutes">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:id="@+id/data_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transportheading"
                android:textColor="@color/textHeading"
                android:textStyle="bold"
                android:textSize="22dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/topimage"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@drawable/transport_page"/>
        </LinearLayout>
    </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp"
                            android:elevation="10dp"
                            android:layout_marginBottom="20dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/data"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:layout_weight="1"
                                android:layout_marginBottom="20dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/lessonplan_header"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="10dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:orientation="horizontal"
                                        android:visibility="visible"
                                        android:background="@color/transparent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/routetitle"
                                            android:layout_marginTop="5dp"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/primaryText"
                                            android:textColor="@color/textHeading"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:gravity="end"
                                        android:layout_height="wrap_content"
                                        android:weightSum="3">

                                        <TextView
                                            android:id="@+id/routetitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:textStyle="bold"
                                            android:layout_marginStart="10dp"
                                            android:textSize="@dimen/primaryText"
                                            android:textColor="@color/textHeading"/>

                                    </LinearLayout>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="8dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="@string/vehicleNo"
                                        android:textColor="@color/textHeading" />

                                    <TextView
                                        android:id="@+id/vehicleNo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="-"
                                        android:textColor="@color/hintDark"
                                        android:layout_weight="1"/>


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="8dp"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:textColor="@color/textHeading"
                                        android:text="@string/vehicleModel"/>
                                    <TextView
                                        android:id="@+id/vehicleModel"
                                        android:layout_width="0dp"
                                        android:padding="5dp"
                                        android:text="-"
                                        android:textColor="@color/hintDark"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:textColor="@color/textHeading"
                                        android:text="@string/driverName"/>
                                    <TextView
                                        android:id="@+id/driverName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="-"
                                        android:textColor="@color/hintDark"
                                        android:layout_weight="1"/>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="8dp"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:textColor="@color/textHeading"
                                        android:text="@string/driverContact"/>
                                    <TextView
                                        android:id="@+id/driverContact"
                                        android:layout_width="0dp"
                                        android:padding="5dp"
                                        android:text="-"
                                        android:textColor="@color/hintDark"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="8dp"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:textColor="@color/textHeading"
                                        android:text="@string/driverLicence"/>
                                    <TextView
                                        android:id="@+id/driverLicence"
                                        android:layout_width="0dp"
                                        android:padding="5dp"
                                        android:text="-"
                                        android:textColor="@color/hintDark"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="8dp"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:textColor="@color/textHeading"
                                        android:text="@string/made"/>
                                    <TextView
                                        android:id="@+id/made"
                                        android:layout_width="0dp"
                                        android:padding="5dp"
                                        android:text="-"
                                        android:textColor="@color/hintDark"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"/>

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/studentTransport_listView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp"
                            android:divider="@color/transparent">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>