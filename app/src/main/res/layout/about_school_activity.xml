<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qdocs.smartschool.AboutSchool">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/about_nameLay"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/about_logoIV"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/about_nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/empty"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:layout_toEndOf="@+id/about_logoIV" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:padding="5dp"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading" />
                    <TextView
                        android:id="@+id/about_addressTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty"
                        android:textSize="@dimen/secondaryText"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:padding="5dp"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading" />
                    <TextView
                        android:id="@+id/about_phoneTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty"
                        android:textSize="@dimen/secondaryText"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:padding="5dp"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading" />
                    <TextView
                        android:id="@+id/about_emailTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty"
                        android:textSize="@dimen/secondaryText"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/schoolCode"
                        android:padding="5dp"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading" />
                    <TextView
                        android:id="@+id/about_schoolCodeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty"
                        android:textSize="@dimen/secondaryText"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/currentSession"
                        android:padding="5dp"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading" />
                    <TextView
                        android:id="@+id/about_currentSessionTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty"
                        android:textSize="@dimen/secondaryText"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sessionStartMonth"
                        android:padding="5dp"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading" />
                    <TextView
                        android:id="@+id/about_sessionMonthTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty"
                        android:textSize="@dimen/secondaryText"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>